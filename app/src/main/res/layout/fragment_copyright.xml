<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_copyright"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/copyright_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:src="@drawable/ic_copyright"
            app:tint="@color/red_600_red_300"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/copyright_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="@string/copyright_alert_title"
            android:textAppearance="@style/TextAppearance.Mega.Subtitle1.Red.20" />

        <TextView
            android:id="@+id/copyright_first_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/copyright_alert_first_paragraph"
            android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Normal" />

        <TextView
            android:id="@+id/copyright_second_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/copyright_alert_second_paragraph"
            android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/disagree_button"
                style="?attr/borderlessButtonStyle"
                android:layout_marginEnd="16dp"
                android:text="@string/copyright_alert_disagree_button" />

            <Button
                android:id="@+id/agree_button"
                style="?attr/materialButtonStyle"
				android:layout_marginEnd="10dp"
                android:text="@string/copyright_alert_agree_button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
