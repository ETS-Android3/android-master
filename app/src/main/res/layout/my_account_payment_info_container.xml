<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/renew_expiry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.Mega.Caption.WhiteGrey87"
        tools:text="Renews on" />

    <TextView
        android:id="@+id/renew_expiry_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/renew_expiry_text"
        android:textAppearance="@style/TextAppearance.Mega.Subtitle2.WhiteGrey87"
        tools:text="Monday, 1 Feb 2021" />

    <TextView
        android:id="@+id/business_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.Mega.Body2.Red400"
        tools:text="Payment overdue" />

</RelativeLayout>