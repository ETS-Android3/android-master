<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TextAppearance.Mega.Subtitle1.Medium"
            android:text="@string/no_authentication_apps_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:fontFamily="roboto"
            android:text="@string/text_2fa_help"
            android:layout_marginTop="14dp"/>

        <Button
            android:id="@+id/play_store_button_help"
            style="?attr/borderlessButtonStyle"
            android:text="@string/play_store_label"
            android:gravity="end|center_vertical"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/cancel_button_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/borderlessButtonStyle"
            android:text="@string/general_cancel"
            android:gravity="end|center_vertical"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>