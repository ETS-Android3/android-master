<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
	    android:id="@+id/change_permissions_dialog_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<LinearLayout
			android:id="@+id/change_permissions_dialog_administrator_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<CheckedTextView
				android:id="@+id/change_permissions_dialog_administrator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
				android:ellipsize="marquee"
				android:layout_gravity="center_vertical"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:theme="@style/ThemeOverlay.ColorControlSecondary"/>

			<LinearLayout
				android:id="@+id/administrator_text_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/administrator_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/administrator_permission_label_participants_panel"
					android:textAppearance="?attr/textAppearanceSubtitle1" />

				<TextView
					android:id="@+id/administrator_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/file_properties_shared_folder_full_access"
					android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Secondary" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/change_permissions_dialog_member_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<CheckedTextView
				android:id="@+id/change_permissions_dialog_member"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
				android:ellipsize="marquee"
				android:layout_gravity="center_vertical"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:theme="@style/ThemeOverlay.ColorControlSecondary"/>

			<LinearLayout
				android:id="@+id/member_text_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/member_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/standard_permission_label_participants_panel"
					android:textAppearance="?attr/textAppearanceSubtitle1" />

				<TextView
					android:id="@+id/member_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/file_properties_shared_folder_read_write"
					android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Secondary" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/change_permissions_dialog_observer_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<CheckedTextView
				android:id="@+id/change_permissions_dialog_observer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
				android:ellipsize="marquee"
				android:layout_gravity="center_vertical"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:theme="@style/ThemeOverlay.ColorControlSecondary"/>

			<LinearLayout
				android:id="@+id/observer_text_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/observer_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/observer_permission_label_participants_panel"
					android:textAppearance="?attr/textAppearanceSubtitle1" />

				<TextView
					android:id="@+id/observer_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/subtitle_read_only_permissions"
					android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Secondary" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
</ScrollView>