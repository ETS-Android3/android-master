<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/expired_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/expired_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/expired_business_title"
            android:textAppearance="@style/TextAppearance.Mega.Headline5" />

        <TextView
            android:id="@+id/expired_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/expired_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:text="@string/expired_user_business_text_2"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="15sp" />


        <Button
            android:id="@+id/expired_dismiss_button"
            style="?attr/materialButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:text="@string/general_dismiss" />
    </LinearLayout>

</ScrollView>