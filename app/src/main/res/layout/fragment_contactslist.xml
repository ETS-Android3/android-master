<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/contact_list_empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/contact_list_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/contact_list_empty_image"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/contact_list_empty_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Normal.Secondary"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="34dp"
                android:gravity="center_horizontal"
                android:text="@string/invite_contacts_to_start_chat"
                android:textAppearance="@style/TextAppearance.Mega.Subtitle2.Normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>