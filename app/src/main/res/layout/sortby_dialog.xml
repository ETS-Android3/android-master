<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
	    android:id="@+id/sortby_dialog_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
		android:paddingBottom="22dp">
	    
	    <TextView 
	        android:id="@+id/sortby_dialog_name_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:textStyle="normal"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="15dp"
			android:layout_marginBottom="10dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_ascending_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_descending_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"/>
	    
	    
	    <TextView 
	        android:id="@+id/sortby_dialog_date_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:textStyle="normal"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="15dp"
			android:layout_marginBottom="10dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_newest_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_oldest_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>

		<TextView 
	        android:id="@+id/sortby_dialog_size_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:textStyle="normal"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="15dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_largest_first_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"/>
	    
	    <CheckedTextView
		    android:id="@+id/sortby_dialog_smallest_first_check"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
		    android:ellipsize="marquee"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:fontFamily="sans-serif"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			android:theme="@style/ThemeOverlay.ColorControlSecondary"
			android:drawablePadding="34dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/sortby_dialog_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>

        <CheckedTextView
            android:id="@+id/sortby_dialog_photo_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:textColor="?android:attr/textColorPrimary"
            android:theme="@style/ThemeOverlay.ColorControlSecondary"
            android:textSize="16sp"
            android:drawablePadding="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <CheckedTextView
            android:id="@+id/sortby_dialog_video_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="22dp"
            android:theme="@style/ThemeOverlay.ColorControlSecondary"
            android:textSize="16sp"
            android:drawablePadding="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>
	</LinearLayout>
</ScrollView>